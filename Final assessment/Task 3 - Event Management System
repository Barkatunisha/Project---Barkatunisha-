Update Events
SET Event_Date = '2023-07-29'
WHERE Event_Id = 1;

DELETE FROM Registrations
WHERE Event_id = 3;

DELETE FROM Attendees 
WHERE Attendee_ID IN (
SELECT Attendee_Id FROM Registrations WHERE Event_Id = 3);

DELETE FROM Events
WHERE Event_ID = 3;

